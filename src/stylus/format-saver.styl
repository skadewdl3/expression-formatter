.format-saver
  background rgba(#000, 0.85)
  width 100vw
  height 100vh
  position fixed
  top 0
  left 0
  display flex
  align-items center
  justify-content center
  &__content
    background #fff
    width 50vw
    height 50vh
    border-radius 1rem
    padding 1rem 2rem
  &__title
    font-size 3rem
    font-weight 700
    text-transform capitalize
    display flex
    margin-bottom 2rem
  &__input
    display block
    width 90%
    border solid 1px transparent
    transition all .2s ease-out
    padding 0.7rem
    font-size 1.6rem
    margin-bottom 2rem
    &:active, &:focus, &:hover
      border solid 1px #1dd1a1
  &__cta
    padding 1rem 2rem
    cursor pointer
    transform-origin 50% 50%
    transition all .2s ease-out
    &:active
      transform scale(0.9)

    font-size 1.6rem
    border-radius 0.5rem
    background #0984e3
    color #fff
    font-weight 700
